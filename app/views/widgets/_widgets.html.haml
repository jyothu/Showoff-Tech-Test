%table.table.is-fullwidth.card
  %thead
    %tr
      %th ID
      %th Name
      %th Description
      %th Visible?
      %th User Name
  %tbody
    - @widgets.each do |widget|
      %tr
        %td=widget['id']
        %td=widget['name']
        %td=widget['description']
        %td=widget['kind'] == 'visible' ? 'YES' : 'NO'
        %td= link_to widget['user']['name'], user_path(widget['user']['id']), target: :_blank